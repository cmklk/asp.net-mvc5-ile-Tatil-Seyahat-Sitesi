    <!--script-->
    <script type="~/web2/text/javascript" src="js/move-top.js"></script>
    <script type="~/web2/text/javascript" src="js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
			jQuery(document).ready(function($) {
				$(".scroll").click(function(event){
					event.preventDefault();
					$('html,body').animate({scrollTop:$(this.hash).offset().top},900);
				});
			});
    </script>
    <!---->

</head>
<body>
    <!---header---->
    <div class="header">
        <div class="container">
         
           
            
            <!---//End-top-nav---->
        </div>
    </div>
    <!--/header-->
    <div class="content">
        <div class="container">
            <div class="content-grids">
                <div class="col-md-8 content-main">
                    <div class="content-grid">
                        @foreach (var b in Model.Deger1)
                        {
                            <div class="content-grid-info">

                                <img src="@b.BlogImage" alt="" />
                                <div class="post-info">
                                    <h4><a href="/Blog/BlogDetay/@b.ID/">@b.Baslik</a> @b.Tarih</h4>
                                    <p>@b.Aciklama</p>
                                </div>
                            </div>
                        }


                    </div>
                </div>
                <div class="col-md-4 content-right">
                    <div class="recent">
                        <h3>SON BLOGLAR</h3>
                        @foreach (var x in Model.Deger3)
                        {
                            <ul>
                                <li><a href="#">@x.Baslik</a></li>

                            </ul>
                        }

                    </div>
                    <div class="comments">
                        <h3>SON YORUMLAR</h3>
                        @foreach (var x in Model.Deger4)
                        {
                            <ul>
                                <li><a href="#"> </a> <h5>@x.KullaniciAdi : <a href="#">@x.Yorum</a></h5></li>

                            </ul>
                        }

                    </div>
                    <div class="clearfix"></div>
                  
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
  

    </body>
</html>
